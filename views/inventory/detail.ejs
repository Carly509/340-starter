<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<main>
  <section class="vehicle-detail-flex">
    <div class="vehicle-detail-left">
      <div class="inspection-badge">
        <div class="cert-text">
          <div class="cert-title">This vehicle has passed inspection</div>
          <div class="cert-subtitle">by an ASE-certified technician.</div>
        </div>
        <img src="/images/certfied.png" alt="Enterprise Certified" class="cert-logo">
      </div>
      <div class="main-vehicle-image">
        <img src="<%= vehicle.image %>" alt="<%= vehicle.year %> <%= vehicle.make %> <%= vehicle.model %>">
      </div>
      <div class="vehicle-thumbnails">
          <img src="<%= vehicle.thumbnail %>" alt="Thumbnail 1">
          <img src="<%= vehicle.image %>" alt="Thumbnail 2">
          <img src="<%= vehicle.image %>" alt="Thumbnail 3">
          <img src="<%= vehicle.image %>" alt="Thumbnail 4">
          <div class="video-thumbnail">
            <img src="<%= vehicle.image %>" alt="Video thumbnail">
            <div class="play-button">â–¶</div>
          </div>
      </div>
    </div>

    <div class="vehicle-detail-right">
      <div class="vehicle-header">
        <h1 class="vehicle-title"><%= vehicle.year %> <%= vehicle.make %> <%= vehicle.model %></h1>
        <div class="price-mileage-container">
          <div class="mileage-section">
            <div class="mileage-label">MILEAGE</div>
            <div class="mileage-value"><%= vehicle.miles ? vehicle.miles.toLocaleString() : 'N/A' %></div>
          </div>
              <span class="price-label">No-Haggle Price <sup>1</sup></span>
          <div class="price-section">
            <div class="price-value">$<%= vehicle.price ? vehicle.price.toLocaleString() : 'N/A' %></div>
            <div class="price-note">Does not include $399 Dealer Reconditioning  service Fee</div>
            <div class="estimate-payments">
              <a href="#" class="estimate-link">ESTIMATE PAYMENTS</a>
            </div>
          </div>
        </div>
      </div>

      <div class="specs-actions-container">
        <%- vehicleSpecs %>

        <div class="vehicle-actions">
          <button class="btn-primary">START MY PURCHASE</button>
          <button class="btn-secondary">CONTACT US</button>
          <button class="btn-secondary">SCHEDULE TEST DRIVE</button>
          <button class="btn-secondary">APPLY FOR FINANCING</button>
        </div>
      </div>
      <div class="contact-container">
      <div class="mpg-section">
        <div class="mpg-badge">*MPG</div>
        <div class="mpg-text">
          <p>The principal prior use of this vehicle was as a Rental Vehicle.</p>
        </div>
      </div>
      <div class="contact-section">
        <div class="contact-item">
          <span class="contact-label">Call Us</span>
        </div>
         <a href="tel:8013967886" class="contact-value">801-396-7886</a>
        <div class="contact-item">
          <span class="contact-label">Visit Us</span>
        </div>
      </div>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>

