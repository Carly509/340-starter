<%- include('../partials/head') %>
<%- include('../partials/header', { user: user }) %>
<%- include('../partials/navigation') %>

<main>
  <h1>Update Account</h1>
  <% if (messages && messages.success) { %>
    <div class="success"><%= messages.success %></div>
  <% } %>
  <% if (messages && messages.error) { %>
    <div class="error"><%= messages.error %></div>
  <% } %>
  <% if (errors && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Account Update Form -->
  <form action="/account/update" method="post" class="account-update-form" novalidate>
    <input type="hidden" name="account_id" value="<%= account.account_id %>">
    <label>First Name:
    <input type="text" name="firstName" value="<%= account.first_name %>" required>
    </label>
    <label>Last Name:
    <input type="text" name="lastName" value="<%= account.last_name %>" required>
    </label>
    <label>Email:
    <input type="email" name="email" value="<%= account.email %>" required>
    </label>
    <button type="submit">Update Account</button>
  </form>

    <p>
      <a href="/inventory" class="back-link">‚Üê Back to Account Management</a>
    </p>
  </div>
</main>

<%- include('../partials/footer') %>

<style>
    main {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2.5em 0;
  background: #f5f7fa;
  min-height: 80vh;
}

main > h1 {
  font-size: 2em;
  color: #23395d;
  margin-bottom: 1.2em;
  text-align: center;
}

.success {
  background: #e6f9ed;
  color: #218838;
  border-left: 4px solid #218838;
  padding: 0.75em 1em;
  margin-bottom: 1em;
  border-radius: 4px;
  width: 100%;
  max-width: 420px;
  font-size: 1em;
}

.error {
  background: #fdeaea;
  color: #c82333;
  border-left: 4px solid #c82333;
  padding: 0.75em 1em;
  margin-bottom: 1em;
  border-radius: 4px;
  width: 100%;
  max-width: 420px;
  font-size: 1em;
}

.error-list {
  background: #fff3cd;
  color: #856404;
  border-left: 4px solid #ffe066;
  padding: 0.75em 1em;
  margin-bottom: 1em;
  border-radius: 4px;
  width: 100%;
  max-width: 420px;
  font-size: 1em;
  list-style: disc inside;
}

.account-update-form {
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  padding: 2em 2em 1.5em 2em;
  max-width: 420px;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 1.2em;
  margin-bottom: 2em;
}

.account-update-form label {
  font-weight: 500;
  color: #23395d;
  margin-bottom: 0.2em;
  display: flex;
  flex-direction: column;
  gap: 0.4em;
}

.account-update-form input[type="text"],
.account-update-form input[type="email"] {
  padding: 0.6em;
  border: 1px solid #bfc9d1;
  border-radius: 4px;
  font-size: 1em;
  background: #f9fafb;
  transition: border 0.2s;
}

.account-update-form input:focus {
  border-color: #2176ae;
  outline: none;
}

.account-update-form button[type="submit"] {
  background: #2176ae;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 0.75em 1.5em;
  font-size: 1em;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.2s;
  margin-top: 0.5em;
}

.account-update-form button[type="submit"]:hover {
  background: #17406d;
}

.back-link {
  display: inline-block;
  margin-top: 0.5em;
  color: #2176ae;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}

.back-link:hover {
  color: #17406d;
  text-decoration: underline;
}
</style>
